<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".UserDetailsActivity" >

    <TextView
        android:id="@+id/user_details_title"
        style="@style/AppTheme.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="User details" />

    <TextView
        android:id="@+id/user_details_name"
        style="@style/AppTheme.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_details_title"
        android:layout_marginBottom="4dp"
        android:textColor="@color/greyPrimary"
        tools:text="Jack Black" />

    <TextView
        android:id="@+id/user_details_email"
        style="@style/AppTheme.Subheader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/user_details_name"
        tools:text="jack@black.com"/>

</RelativeLayout>