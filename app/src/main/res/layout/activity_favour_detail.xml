<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavourDetailsActivity" >

    <TextView
        android:id="@+id/favour_item_title"
        style="@style/AppTheme.Subheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-2dp"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/greyPrimary"
        tools:text="Favour title" />

    <TextView
        android:id="@+id/favour_item_description"
        style="@style/AppTheme.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/favour_item_title"
        android:layout_alignStart="@+id/favour_item_title"
        android:layout_below="@+id/favour_item_title"
        tools:text="Favour veeeryyy long description" />

    <TextView
        android:id="@+id/favour_item_by"
        style="@style/AppTheme.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/favour_item_title"
        android:layout_below="@+id/favour_item_description"
        android:text="by: " />

    <TextView
        android:id="@+id/favour_item_user_name"
        style="@style/AppTheme.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/favour_item_by"
        android:layout_alignTop="@+id/favour_item_by"
        tools:text="User name" />

</RelativeLayout>